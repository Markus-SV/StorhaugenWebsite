@using StorhaugenWebsite.DTOs
@using System.ComponentModel.DataAnnotations
@inject IApiClient ApiClient
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <div class="invite-dialog">
            <MudText Typo="Typo.h6" Class="mb-2">Invite Member to @HouseholdName</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
                Enter the email address of the person you want to invite. They'll receive an invitation that they can accept from the Settings page.
            </MudText>

            <MudForm @ref="_form" @bind-IsValid="_isValid">
                <MudTextField @bind-Value="_email"
                              Label="Email Address"
                              Variant="Variant.Outlined"
                              Required="true"
                              RequiredError="Email is required"
                              Validation="@(new EmailAddressAttribute() { ErrorMessage = "Please enter a valid email address" })"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Rounded.Email"
                              HelperText="e.g., friend@example.com"
                              Immediate="true"
                              Class="mb-2" />
            </MudForm>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Severity="Severity.Error" Class="mt-3" Dense="true" ShowCloseIcon="true" CloseIconClicked="@(() => _errorMessage = null)">
                    @_errorMessage
                </MudAlert>
            }

            @if (!string.IsNullOrEmpty(_successMessage))
            {
                <MudAlert Severity="Severity.Success" Class="mt-3" Dense="true">
                    @_successMessage
                </MudAlert>
            }

            <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-3">
                <strong>Note:</strong> The invitee must have an account or sign up first to accept the invitation.
            </MudText>
        </div>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="_isSending">Cancel</MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="SendInvite"
                   Disabled="_isSending || !_isValid">
            @if (_isSending)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                <span>Sending...</span>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Rounded.Send" Class="mr-2" Size="Size.Small" />
                <span>Send Invite</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

<style>
    .invite-dialog {
        padding: 8px 0;
        min-width: 450px;
    }
</style>

@code {
    [CascadingParameter]
    MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public int HouseholdId { get; set; }

    [Parameter]
    public string HouseholdName { get; set; } = "";

    private MudForm? _form;
    private bool _isValid = false;
    private bool _isSending = false;
    private string _email = "";
    private string? _errorMessage;
    private string? _successMessage;

    private async Task SendInvite()
    {
        _errorMessage = null;
        _successMessage = null;

        await _form!.Validate();

        if (!_isValid)
        {
            _errorMessage = "Please fix the errors before sending";
            return;
        }

        if (string.IsNullOrWhiteSpace(_email))
        {
            _errorMessage = "Please enter an email address";
            return;
        }

        _isSending = true;
        StateHasChanged();

        try
        {
            var dto = new InviteToHouseholdDto { Email = _email.Trim() };
            await ApiClient.InviteToHouseholdAsync(HouseholdId, dto);

            _successMessage = $"Invitation sent to {_email}!";
            Snackbar.Add($"Invitation sent to {_email}", Severity.Success);

            // Clear the form for another invite
            _email = "";
            _form?.ResetAsync();

            // Close dialog after a short delay
            await Task.Delay(1500);
            MudDialog?.Close(DialogResult.Ok(true));
        }
        catch (HttpRequestException ex)
        {
            if (ex.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                _errorMessage = "This user is already a member or has a pending invitation";
            }
            else if (ex.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                _errorMessage = "Household not found";
            }
            else
            {
                _errorMessage = $"Failed to send invitation: {ex.Message}";
            }
            Console.WriteLine($"Error sending invite: {ex}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"An unexpected error occurred: {ex.Message}";
            Console.WriteLine($"Error sending invite: {ex}");
        }
        finally
        {
            _isSending = false;
            StateHasChanged();
        }
    }

    private void Cancel()
    {
        MudDialog?.Close(DialogResult.Cancel());
    }
}
