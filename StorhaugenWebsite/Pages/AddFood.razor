    private string GetMemberColor(string? name)
    {
        if (string.IsNullOrEmpty(name)) return "hsl(0, 0%, 50%)";
        var hash = name.GetHashCode();
        var hue = Math.Abs(hash % 360);
        return $"hsl({hue}, 45%, 45%)";
    }

