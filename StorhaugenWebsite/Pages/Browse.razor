@page "/browse"
@using Microsoft.AspNetCore.Authorization
@using StorhaugenWebsite.ApiClient
@using StorhaugenWebsite.DTOs
@inject IAuthService AuthService
@inject IApiClient ApiClient
@inject IHouseholdStateService HouseholdState
@inject NavigationManager Navigation
@inject IDeviceStateService DeviceState
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@attribute [Authorize]

<div class="d-flex align-center gap-3 mb-4">
    <h1 class="page-title" style="margin-bottom: 0; font-size: 1.5rem;">Utforsk</h1>
</div>

<div class="d-flex flex-column gap-3 mb-4">
    <MudTextField @bind-Value="_searchQuery"
                  Label="Søk etter oppskrifter"
                  Variant="Variant.Outlined"
                  Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Rounded.Search"
                  OnKeyUp="OnSearchKeyUp"
                  Immediate="false"
                  DebounceInterval="500"
                  Class="search-field" />

    <div class="d-flex gap-2 mb-3">
        <MudChip Color="@(_viewMode == "global" ? Color.Primary : Color.Default)"
                 OnClick="@(() => SetViewMode("global"))"
                 T="string"
                 Icon="@Icons.Material.Rounded.LocalDining">
            HelloFresh
        </MudChip>
        <MudChip Color="@(_viewMode == "community" ? Color.Primary : Color.Default)"
                 OnClick="@(() => SetViewMode("community"))"
                 T="string"
                 Icon="@Icons.Material.Rounded.People">
            Fellesskapet
        </MudChip>
    </div>

    @if (_viewMode == "global")
    {
        <div class="d-flex gap-2 flex-wrap">
            <MudChip Color="@(_hellofreshOnly ? Color.Primary : Color.Default)"
                     OnClick="ToggleHelloFresh"
                     T="string"
                     Icon="@Icons.Material.Rounded.Verified">
                Kun HelloFresh
            </MudChip>

            <MudMenu AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                <ActivatorContent>
                    <MudChip Icon="@Icons.Material.Rounded.Public" T="string"
                             Color="@(!string.IsNullOrEmpty(_selectedCuisine) ? Color.Primary : Color.Default)">
                        @(!string.IsNullOrEmpty(_selectedCuisine) ? _selectedCuisine : "Alle kjøkken")
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="@(() => SetCuisine(null))">Alle kjøkken</MudMenuItem>
                    <MudDivider />
                    @foreach (var cuisine in _availableCuisines)
                    {
                        <MudMenuItem OnClick="@(() => SetCuisine(cuisine))">@cuisine</MudMenuItem>
                    }
                </ChildContent>
            </MudMenu>

            <MudMenu AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                <ActivatorContent>
                    <MudChip T="string" Icon="@Icons.Material.Rounded.Speed"
                             Color="@(!string.IsNullOrEmpty(_selectedDifficulty) ? Color.Primary : Color.Default)">
                        @(!string.IsNullOrEmpty(_selectedDifficulty) ? _selectedDifficulty : "Vanskelighetsgrad")
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="@(() => SetDifficulty(null))">Alle</MudMenuItem>
                    <MudDivider />
                    <MudMenuItem OnClick="@(() => SetDifficulty("Easy"))">Lett</MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetDifficulty("Medium"))">Medium</MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetDifficulty("Hard"))">Vanskelig</MudMenuItem>
                </ChildContent>
            </MudMenu>

            <MudMenu AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                <ActivatorContent>
                    <MudChip T="string" Icon="@Icons.Material.Rounded.AccessTime"
                             Color="@(_maxPrepTime.HasValue ? Color.Primary : Color.Default)">
                        @(_maxPrepTime.HasValue ? $"≤ {_maxPrepTime} min" : "Tid")
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="@(() => SetMaxPrepTime(null))">All tid</MudMenuItem>
                    <MudDivider />
                    <MudMenuItem OnClick="@(() => SetMaxPrepTime(15))">≤ 15 min</MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetMaxPrepTime(30))">≤ 30 min</MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetMaxPrepTime(45))">≤ 45 min</MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetMaxPrepTime(60))">≤ 60 min</MudMenuItem>
                </ChildContent>
            </MudMenu>

            <MudMenu AnchorOrigin="Origin.BottomLeft" TransformOrigin="Origin.TopLeft">
                <ActivatorContent>
                    <MudChip T="string" Icon="@Icons.Material.Rounded.Sort"
                             Color="Color.Default">
                        Sortering: @GetSortLabel()
                    </MudChip>
                </ActivatorContent>
                <ChildContent>
                    <MudMenuItem OnClick="@(() => SetSort("popular"))">
                        <div class="d-flex align-center gap-2">
                            <MudIcon Icon="@Icons.Material.Rounded.TrendingUp" Size="Size.Small" />
                            <span>Populært</span>
                        </div>
                    </MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetSort("newest"))">
                        <div class="d-flex align-center gap-2">
                            <MudIcon Icon="@Icons.Material.Rounded.NewReleases" Size="Size.Small" />
                            <span>Nyest</span>
                        </div>
                    </MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetSort("rating"))">
                        <div class="d-flex align-center gap-2">
                            <MudIcon Icon="@Icons.Material.Rounded.Star" Size="Size.Small" />
                            <span>Vurdering</span>
                        </div>
                    </MudMenuItem>
                    <MudMenuItem OnClick="@(() => SetSort("name"))">
                        <div class="d-flex align-center gap-2">
                            <MudIcon Icon="@Icons.Material.Rounded.SortByAlpha" Size="Size.Small" />
                            <span>Navn</span>
                        </div>
                    </MudMenuItem>
                </ChildContent>
            </MudMenu>
        </div>
    }
</div>

