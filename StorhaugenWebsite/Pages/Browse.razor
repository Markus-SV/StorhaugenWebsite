                </div>
            </div>
        }
    </div> *@
}
else if (_viewMode == "global" && !_recipes.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <MudIcon Icon="@Icons.Material.Rounded.SearchOff" Size="Size.Large" />
        </div>
        <h2 class="empty-state-title">Ingen oppskrifter funnet</h2>
        <p class="empty-state-text">Prøv å endre filtre eller søk</p>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="ClearFilters">
            Tøm alle filtre
        </MudButton>
    </div>
}
else if (_viewMode == "community" && !_publicRecipes.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <MudIcon Icon="@Icons.Material.Rounded.People" Size="Size.Large" />
        </div>
        <h2 class="empty-state-title">Ingen oppskrifter ennå</h2>
        <p class="empty-state-text">Bli den første til å dele en oppskrift med fellesskapet!</p>
    </div>
}
else if (_viewMode == "global")
{
    <div class="d-flex flex-column gap-3">
        @foreach (var recipe in _recipes)
        {
            var currentRecipe = recipe;
            <div class="global-recipe-card">
                @if (!string.IsNullOrEmpty(currentRecipe.ImageUrl))
                {
                    <img src="@currentRecipe.ImageUrl" alt="@currentRecipe.Name" class="recipe-card-image" />
                }
                else
                {
                    <div class="recipe-card-placeholder">
                        <MudIcon Icon="@Icons.Material.Rounded.Restaurant" Size="Size.Large" />
                    </div>
                }
                <div class="recipe-card-content">
                    <div class="d-flex justify-space-between align-start gap-3 mb-2">
                        <div>
                            <h3 class="recipe-card-title">@currentRecipe.Name</h3>
                            @if (currentRecipe.IsHellofresh)
                            {
                                <MudChip T="string" Size="Size.Small" Color="Color.Primary" Icon="@Icons.Material.Rounded.LocalDining" Style="height: 20px; margin-top: 4px;">
                                    HelloFresh
                                </MudChip>
                            }
                        </div>
                        @if (currentRecipe.AverageRating > 0)
                        {
                            <span class="rating-badge rating-high">
                                <MudIcon Icon="@Icons.Material.Rounded.Star" Size="Size.Small" />
                                @currentRecipe.AverageRating.ToString("0.0")
                            </span>
                        }
                    </div>

                    <div class="recipe-meta">
                        @if (currentRecipe.PrepTimeMinutes.HasValue)
                        {
                            <div class="meta-item">
                                <MudIcon Icon="@Icons.Material.Rounded.AccessTime" Size="Size.Small" />
                                <span>@currentRecipe.PrepTimeMinutes min</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(currentRecipe.Difficulty))
                        {
                            <div class="meta-item">
                                <MudIcon Icon="@Icons.Material.Rounded.Speed" Size="Size.Small" />
                                <span>@currentRecipe.Difficulty</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(currentRecipe.Cuisine))
                        {
                            <div class="meta-item">
                                <MudIcon Icon="@Icons.Material.Rounded.Public" Size="Size.Small" />
                                <span>@currentRecipe.Cuisine</span>
                            </div>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(currentRecipe.Description))
                    {
                        <p class="recipe-description">@currentRecipe.Description</p>
                    }

                    @if (currentRecipe.Tags?.Any() == true)
                    {
                        <div class="recipe-tags">
                            @foreach (var tag in currentRecipe.Tags.Take(5))
                            {
                                <MudChip T="string" Size="Size.Small" Style="height: 24px;">@tag</MudChip>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2 mt-3">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Rounded.Link"
                                   OnClick="@(() => AddRecipe(currentRecipe, false))"
                                   Disabled="@(!HouseholdState.HasHousehold)"
                                   Size="Size.Small">
                            Legg til som lenke
                        </MudButton>
                        <MudButton Variant="Variant.Outlined"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Rounded.ContentCopy"
                                   OnClick="@(() => AddRecipe(currentRecipe, true))"
                                   Disabled="@(!HouseholdState.HasHousehold)"
                                   Size="Size.Small">
                            Legg til som kopi
                        </MudButton>
                    </div>

                    @if (!HouseholdState.HasHousehold)
                    {
                        <MudText Typo="Typo.caption" Color="Color.Error" Class="mt-2">
                            Opprett en husstand i Innstillinger for å legge til oppskrifter
                        </MudText>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (_totalPages > 1)
    {
        <div class="d-flex justify-center align-center gap-2 mt-4">
            <MudIconButton Icon="@Icons.Material.Rounded.ChevronLeft"
                           OnClick="PreviousPage"
                           Disabled="@(_currentPage <= 1)"
                           Size="Size.Small" />
            <MudText Typo="Typo.body2">
                Side @_currentPage av @_totalPages
            </MudText>
            <MudIconButton Icon="@Icons.Material.Rounded.ChevronRight"
                           OnClick="NextPage"
                           Disabled="@(_currentPage >= _totalPages)"
                           Size="Size.Small" />
        </div>
    }
}
else if (_viewMode == "community")
{
    <div class="d-flex flex-column gap-3">
        @foreach (var recipe in _publicRecipes)
        {
            var currentRecipe = recipe;
            <div class="global-recipe-card">
                @if (!string.IsNullOrEmpty(currentRecipe.ImageUrl))
                {
                    <img src="@currentRecipe.ImageUrl" alt="@currentRecipe.Name" class="recipe-card-image" />
                }
                else
                {
                    <div class="recipe-card-placeholder">
                        <MudIcon Icon="@Icons.Material.Rounded.Restaurant" Size="Size.Large" />
                    </div>
                }
                <div class="recipe-card-content">
                    <div class="d-flex justify-space-between align-start gap-3 mb-2">
                        <div>
                            <h3 class="recipe-card-title">@currentRecipe.Name</h3>
                            <MudChip T="string" Size="Size.Small" Color="Color.Success" Icon="@Icons.Material.Rounded.People" Style="height: 20px; margin-top: 4px;">
                                @currentRecipe.HouseholdName
                            </MudChip>
                        </div>
                        @if (currentRecipe.AverageRating > 0)
                        {
                            <span class="rating-badge rating-high">
                                <MudIcon Icon="@Icons.Material.Rounded.Star" Size="Size.Small" />
                                @currentRecipe.AverageRating.ToString("0.0")
                            </span>
                        }
                    </div>

                    <div class="recipe-meta">
                        <div class="meta-item" style="color: var(--mud-palette-primary); font-weight: 500;">
                            <MudIcon Icon="@Icons.Material.Rounded.Home" Size="Size.Small" />
                            <span>@currentRecipe.HouseholdName</span>
                        </div>

                        <div class="meta-item">
                            <MudIcon Icon="@Icons.Material.Rounded.PersonOutline" Size="Size.Small" />
                            <span style="font-size: 0.8em;">@currentRecipe.AddedByName</span>
                        </div>

                        <div class="meta-item">
                            <MudIcon Icon="@Icons.Material.Rounded.CalendarMonth" Size="Size.Small" />
                            <span>@currentRecipe.DateAdded.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(currentRecipe.Description))
                    {
                        <p class="recipe-description">@currentRecipe.Description</p>
                    }

                    <div class="d-flex gap-2 mt-3">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   StartIcon="@Icons.Material.Rounded.ContentCopy"
                                   OnClick="@(() => AddPublicRecipe(currentRecipe))"
                                   Disabled="@(!HouseholdState.HasHousehold)"
                                   Size="Size.Small">
                            Legg til i min liste
                        </MudButton>
                    </div>

                    @if (!HouseholdState.HasHousehold)
                    {
                        <MudText Typo="Typo.caption" Color="Color.Error" Class="mt-2">
                            Opprett en husstand i Innstillinger for å legge til oppskrifter
                        </MudText>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Pagination for community -->
    @if (_publicTotalPages > 1)
    {
        <div class="d-flex justify-center align-center gap-2 mt-4">
            <MudIconButton Icon="@Icons.Material.Rounded.ChevronLeft"
                           OnClick="PreviousPage"
                           Disabled="@(_currentPage <= 1)"
                           Size="Size.Small" />
            <MudText Typo="Typo.body2">
                Page @_currentPage of @_publicTotalPages
            </MudText>
            <MudIconButton Icon="@Icons.Material.Rounded.ChevronRight"
                           OnClick="NextPage"
                           Disabled="@(_currentPage >= _publicTotalPages)"
                           Size="Size.Small" />
        </div>
    }
}

