        display: flex;
        align-items: center;
        gap: 8px;
        width: 100%;
    }

    /* Swipeable Week Selector */
    .week-selector-swipeable {
        display: flex;
        align-items: center;
        gap: 4px;
        flex: 1;
        min-width: 0;
        background: var(--mud-palette-surface);
