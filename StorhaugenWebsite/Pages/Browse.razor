@code {
    private List<GlobalRecipeDto> _recipes = new();
    private List<PublicRecipeDto> _publicRecipes = new();
    private bool _isLoading = true;
    private string _searchQuery = "";
    private string? _selectedCuisine = null;
    private string? _selectedDifficulty = null;
    private int? _maxPrepTime = null;
    private bool _hellofreshOnly = false;
    private string _sortBy = "popular";
    private int _currentPage = 1;
    private int _pageSize = 20;
    private int _totalRecipes = 0;
    private int _totalPages = 0;
    private int _publicTotalPages = 0;
    private string _viewMode = "global";

    private readonly List<string> _availableCuisines = new()
    {
        "Italian", "Mexican", "Asian", "American", "Mediterranean",
        "Indian", "French", "Thai", "Japanese", "Chinese"
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadRecipes();
    }

    private async Task SetViewMode(string mode)
    {
        _viewMode = mode;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task LoadRecipes()
    {
        _isLoading = true;
        try
        {
            if (_viewMode == "global")
            {
                var query = new BrowseGlobalRecipesQuery
                {
                    Search = string.IsNullOrWhiteSpace(_searchQuery) ? null : _searchQuery,
                    Cuisine = _selectedCuisine,
                    Difficulty = _selectedDifficulty,
                    MaxPrepTime = _maxPrepTime,
                    HellofreshOnly = _hellofreshOnly,
                    SortBy = _sortBy,
                    Page = _currentPage,
                    PageSize = _pageSize
                };

                var result = await ApiClient.BrowseGlobalRecipesAsync(query);
                _recipes = result.Recipes;
                _totalRecipes = result.TotalCount;
                _totalPages = result.TotalPages;
            }
            else if (_viewMode == "community")
            {
                var query = new BrowsePublicRecipesQuery
                {
                    Search = string.IsNullOrWhiteSpace(_searchQuery) ? null : _searchQuery,
                    SortBy = _sortBy == "popular" ? "newest" : _sortBy, // Default to newest for community
                    Page = _currentPage,
                    PageSize = _pageSize
                };

                var result = await ApiClient.BrowsePublicRecipesAsync(query);
                _publicRecipes = result.Recipes;
                _publicTotalPages = result.TotalPages;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading recipes: {ex.Message}");
            Snackbar.Add("Failed to load recipes", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            _currentPage = 1;
            await LoadRecipes();
        }
    }

    private async Task ToggleHelloFresh()
    {
        _hellofreshOnly = !_hellofreshOnly;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task SetCuisine(string? cuisine)
    {
        _selectedCuisine = cuisine;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task SetDifficulty(string? difficulty)
    {
        _selectedDifficulty = difficulty;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task SetMaxPrepTime(int? minutes)
    {
        _maxPrepTime = minutes;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task SetSort(string sortBy)
    {
        _sortBy = sortBy;
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task ClearFilters()
    {
        _searchQuery = "";
        _selectedCuisine = null;
        _selectedDifficulty = null;
        _maxPrepTime = null;
        _hellofreshOnly = false;
        _sortBy = "popular";
        _currentPage = 1;
        await LoadRecipes();
    }

    private async Task PreviousPage()
    {
        if (_currentPage > 1)
        {
            _currentPage--;
            await LoadRecipes();
        }
    }

    private async Task NextPage()
    {
        if (_currentPage < _totalPages)
        {
            _currentPage++;
            await LoadRecipes();
        }
    }

    private string GetSortLabel()
    {
        return _sortBy switch
        {
            "popular" => "Populært",
            "newest" => "Nyest",
            "rating" => "Vurdering",
            "name" => "Navn",
            _ => "Populært"
        };
    }

    private async Task AddRecipe(GlobalRecipeDto recipe, bool fork)
    {
        if (!HouseholdState.HasHousehold)
        {
            Snackbar.Add("Vennligst opprett en husstand først", Severity.Warning);
            return;
        }

        try
        {
            var dto = new CreateHouseholdRecipeDto
            {
                GlobalRecipeId = recipe.Id,
                Fork = fork,
                Name = fork ? recipe.Name : null,
                PrepTimeMinutes = fork ? recipe.PrepTimeMinutes : null,
                Servings = fork ? recipe.Servings : null,
                Difficulty = fork ? recipe.Difficulty : null,
                Cuisine = fork ? recipe.Cuisine : null,
                Tags = fork ? recipe.Tags : null,
                Ingredients = fork ? recipe.Ingredients : null,
                Instructions = fork ? recipe.Instructions : null,
                ImageUrl = fork ? recipe.ImageUrl : null,
                Description = fork ? recipe.Description : null
            };

            await ApiClient.CreateRecipeAsync(dto);

            if (fork)
            {
                Snackbar.Add($"'{recipe.Name}' kopiert til din husstand", Severity.Success);
            }
            else
            {
                Snackbar.Add($"'{recipe.Name}' lenket til din husstand", Severity.Success);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding recipe: {ex.Message}");
            Snackbar.Add("Klarte ikke å legge til oppskrift", Severity.Error);
        }
    }

    private async Task AddPublicRecipe(PublicRecipeDto recipe)
    {
        if (!HouseholdState.HasHousehold)
        {
            Snackbar.Add("Please create a household first", Severity.Warning);
            return;
        }

        try
        {
            // Create a copy of the public recipe in the user's household
            var dto = new CreateHouseholdRecipeDto
            {
                Name = recipe.Name,
                Description = recipe.Description,
                ImageUrls = recipe.ImageUrls
            };

            await ApiClient.CreateRecipeAsync(dto);
            Snackbar.Add($"'{recipe.Name}' lagt til i din liste!", Severity.Success);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding recipe: {ex.Message}");
            Snackbar.Add("Klarte ikke å legge til oppskrift", Severity.Error);
        }
    }
