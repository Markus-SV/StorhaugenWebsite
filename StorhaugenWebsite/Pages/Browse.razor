        display: none;
    }

    .week-chip-compact {
        font-size: 0.7rem !important;
        height: 24px !important;
        padding: 0 8px !important;
        flex-shrink: 0;
    }

    .week-clear-btn {
        padding: 4px !important;
        min-width: 28px !important;
