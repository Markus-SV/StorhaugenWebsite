@page "/settings"
@using Microsoft.AspNetCore.Authorization
@using StorhaugenWebsite.ApiClient
@using StorhaugenWebsite.Models
@using StorhaugenWebsite.Shared.DTOs
@using MudBlazor.Utilities
@inject IAuthService AuthService
@inject IDeviceStateService DeviceState
@inject ICollectionStateService CollectionState
@inject IFoodService FoodService
@inject IApiClient ApiClient
@inject NavigationManager Navigation
@inject ISnackbar Snackbar
@inject IJSRuntime JSRuntime
@inject IThemeService ThemeService
@inject IUserColorService UserColorService
@attribute [Authorize]

<div class="d-flex align-center gap-3 mb-4">
    <h1 class="page-title" style="margin-bottom: 0;">Innstillinger</h1>
</div>

<div class="form-section">
    <p class="form-section-title">Konto</p>

    <div class="setting-row">
        <div class="d-flex align-center gap-3">
            <MudAvatar Style="@($"background: {UserColorService.GetUserColor(_userProfile?.DisplayName ?? AuthService.CurrentUserName)}")">
                @((_userProfile?.DisplayName ?? AuthService.CurrentUserName ?? "?")[0])
            </MudAvatar>
            <div>
                <MudText Typo="Typo.body1" Style="font-weight: 500;">@AuthService.CurrentUserName</MudText>
                <MudText Typo="Typo.caption" Color="Color.Secondary">@AuthService.CurrentUserEmail</MudText>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <MudTextField @bind-Value="_editDisplayName"
                      Label="Brukernavn"
                      Variant="Variant.Outlined"
                      Adornment="Adornment.End"
                      AdornmentIcon="@Icons.Material.Filled.Save"
                      OnAdornmentClick="UpdateDisplayName"
                      HelperText="Trykk på lagre-ikonet for å oppdatere navnet ditt" />
    </div>

    @if (!string.IsNullOrEmpty(_userProfile?.UniqueShareId))
    {
        <div class="setting-row" style="padding: 12px 0;">
            <div class="d-flex align-center justify-space-between" style="width: 100%;">
                <div>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Din personlige ID</MudText>
                    <MudText Typo="Typo.h6" Style="font-family: monospace; letter-spacing: 2px; font-weight: 600;">
                        @_userProfile.UniqueShareId
                    </MudText>
                </div>
                <MudIconButton Icon="@Icons.Material.Rounded.ContentCopy"
                               Size="Size.Small"
                               Color="Color.Primary"
                               OnClick="CopyShareId"
                               Title="Kopier ID" />
            </div>
        </div>
    }
</div>

<div class="form-section">
    <div class="d-flex justify-space-between align-center mb-2">
        <p class="form-section-title" style="margin-bottom: 0;">Arkiv</p>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Size="Size.Small"
                   StartIcon="@Icons.Material.Rounded.Inventory2"
                   OnClick="NavigateToArchived">
            Åpne arkiv
        </MudButton>
    </div>
    <MudText Typo="Typo.caption" Color="Color.Secondary">
        Administrer arkiverte måltider dine. @(_loadingArchivedCount ? "" : _archivedCount > 0 ? $"{_archivedCount} arkiverte oppskrifter" : "Ingen arkiverte oppskrifter")
        @if (_loadingArchivedCount)
        {
            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="ml-2" />
        }
    </MudText>
</div>

<div class="form-section">
    <p class="form-section-title">Utseende</p>

    <MudSelect T="string"
               Label="Fargetema"
               Value="@_currentTheme"
               ValueChanged="OnThemeChanged"
               Variant="Variant.Outlined"
               Class="theme-select"
               AnchorOrigin="Origin.BottomLeft"
               Style="margin-bottom: 16px;">
        @foreach (var themeName in ThemeService.GetAvailableThemes())
        {
            var colors = ThemeService.GetThemeColors(themeName);
            <MudSelectItem Value="@themeName">
                <div class="theme-preview-container">
                    <div class="mini-website" style="background: @colors.Background; border-color: @colors.Divider;">
                        <div class="mini-appbar" style="background: @colors.AppbarBackground;"></div>
                        <div class="mini-sidebar" style="background: @colors.BackgroundGrey;"></div>
                        <div class="mini-content" style="background: @colors.Surface;">
                            <div class="mini-primary" style="background: @colors.Primary;"></div>
                            <div class="mini-text" style="background: @colors.TextPrimary;"></div>
                            <div class="mini-text-sm" style="background: @colors.TextSecondary;"></div>
                        </div>
                    </div>
                    <span class="theme-name">@GetThemeDisplayName(themeName)</span>
                </div>
            </MudSelectItem>
        }
    </MudSelect>

    <div class="setting-row" style="padding-top: 4px;">
        <div class="flex-grow-1">
            <MudText Typo="Typo.body2" Style="font-weight: 500;">Bruk egen hovedfarge</MudText>
            <MudText Typo="Typo.caption" Color="Color.Secondary">Overstyr primærfarge</MudText>
        </div>

        <MudSwitch Color="Color.Primary"
                   Value="@_useCustomThemeColors"
                   ValueChanged="@((bool b) => OnToggleUseCustomThemeColors(b))" />
    </div>

    <div class="custom-primary-row">
        <MudColorPicker Value="@_customThemeColor"
                        ValueChanged="OnCustomThemeColorChanged"
                        Disabled="@(!_useCustomThemeColors)"
                        Class="custom-color-picker-dialog"
                        AnchorOrigin="Origin.BottomCenter"
                        ShowToolbar="false"
                        ShowAlpha="false"
                        PickerVariant="PickerVariant.Dialog"
                        Style="margin-top: 0" />

        <div class="custom-color-preview"
             style="background-color: @_customThemeColor.Value; @(!_useCustomThemeColors ? "opacity: 0.5;" : "")">
        </div>
    </div>
</div>

@if (CollectionState.UserCollections.Any())
{
    <div class="form-section">
        <div class="d-flex justify-space-between align-center mb-2">
            <p class="form-section-title" style="margin-bottom: 0;">Dine Samlinger</p>
            <MudButton Variant="Variant.Text"
                       Color="Color.Primary"
                       Size="Size.Small"
                       StartIcon="@Icons.Material.Rounded.Settings"
                       Href="collections">
                Administrer
            </MudButton>
        </div>
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mb-3">
            Du er med i @CollectionState.UserCollections.Count samling(er).
        </MudText>
    </div>
}

<div class="form-section mt-4">
    <div class="d-flex justify-center flex-column align-center gap-1">
        <MudText Typo="Typo.body2" Style="font-weight: 500;">Storhaugen Eats</MudText>
        <MudText Typo="Typo.caption" Color="Color.Secondary">Version 2.1.1</MudText>
    </div>
</div>

<div class="form-section">
    <MudButton Variant="Variant.Outlined"
               Color="Color.Error"
               FullWidth="true"
               StartIcon="@Icons.Material.Rounded.Logout"
               OnClick="Logout"
               Style="border-radius: 12px;">
        Logg ut
    </MudButton>
</div>

<style>
    .setting-row {
        display: flex;
        align-items: center;
        padding: 12px 0;
        gap: 16px;
    }

    .theme-select .mud-input-slot {
        min-height: 70px !important;
        padding: 8px 14px !important;
    }

    .theme-preview-container {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-top: 8px;
    }

    .theme-name {
        font-weight: 500;
    }

    .mini-website {
        width: 100px;
        height: 56px;
        border-radius: 6px;
        border: 1px solid;
        display: flex;
        flex-wrap: wrap;
        overflow: hidden;
        flex-shrink: 0;
    }

    .mini-appbar {
        width: 100%;
        height: 10px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.1);
    }

    .mini-sidebar {
        width: 16px;
        height: calc(100% - 10px);
    }

    .mini-content {
        flex: 1;
        margin: 4px;
        border-radius: 3px;
        padding: 4px;
        display: flex;
        flex-direction: column;
        gap: 3px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    }

    .mini-primary {
        width: 8px;
        height: 8px;
        border-radius: 50%;
    }

    .mini-text {
        width: 60%;
        height: 4px;
        border-radius: 2px;
    }

    .mini-text-sm {
        width: 40%;
        height: 3px;
        border-radius: 2px;
    }

    .custom-primary-row {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-top: 8px;
    }

    .custom-color-picker-dialog {
        width: 125px;
    }

    .custom-color-preview {
        width: 34px;
        height: 34px;
        border-radius: 10px;
        border: 1px solid var(--mud-palette-divider);
    }
</style>

@code {
    private UserDto? _userProfile;
    private string? _editDisplayName;
    private string _currentTheme = "Light";
    private string _viewMode = "card";
    private int _archivedCount;
    private bool _loadingArchivedCount;

    // NEW
    private bool _useCustomThemeColors;
    private MudColor _customThemeColor = new("#E07A2E");

    protected override async Task OnInitializedAsync()
    {
        _userProfile = CollectionState.CurrentProfile;
        _editDisplayName = _userProfile?.DisplayName;

        if (_userProfile is null)
        {
            _userProfile = await ApiClient.GetMyProfileAsync();
            _editDisplayName = _userProfile?.DisplayName;
        }

        _currentTheme = ThemeService.GetCurrentThemeName();
        _viewMode = DeviceState.Settings.ViewMode;

        await LoadArchivedCountAsync();
    }

    private async Task UpdateDisplayName()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(_editDisplayName)) _editDisplayName = null;

            var updatedProfile = await ApiClient.UpdateMyProfileAsync(new UpdateUserDto
            {
                DisplayName = _editDisplayName
            });

            _userProfile = updatedProfile;
            AuthService.UpdateCachedDisplayName(updatedProfile.DisplayName);
            Snackbar.Add("Brukernavn oppdatert", Severity.Success);
        }
        catch
        {
            Snackbar.Add("Klarte ikke å oppdatere navn", Severity.Error);
        }
    }

    private async Task CopyShareId()
    {
        if (string.IsNullOrEmpty(_userProfile?.UniqueShareId)) return;
        try
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", _userProfile.UniqueShareId);
            Snackbar.Add("ID kopiert!", Severity.Success);
        }
        catch
        {
            Snackbar.Add("Feil ved kopiering", Severity.Error);
        }
    }

    private async Task OnThemeChanged(string themeName)
    {
        _currentTheme = themeName;
        await ThemeService.SetThemeAsync(themeName);

        // keep a reasonable default for the picker if user never chose one
        if (string.IsNullOrWhiteSpace(DeviceState.Settings.CustomThemeColor))
            _customThemeColor = new MudColor(ThemeService.GetThemeColors(themeName).Primary);
    }

    private async Task OnToggleUseCustomThemeColors(bool enabled)
    {
        _useCustomThemeColors = enabled;
        await DeviceState.ToggleUseCustomThemeColorsAsync(enabled);

        // force theme refresh so MudThemeProvider re-renders + GetCurrentTheme runs
        await ThemeService.SetThemeAsync(_currentTheme);
    }

    private async Task OnCustomThemeColorChanged(MudColor customColor)
    {
        _customThemeColor = customColor;

        // save as #RRGGBB (no alpha, no rgba)
        var hex = $"#{customColor.R:X2}{customColor.G:X2}{customColor.B:X2}";
        await DeviceState.SetCustomThemeColorAsync(hex);

        if (_useCustomThemeColors)
            await ThemeService.SetThemeAsync(_currentTheme);
    }

    private async Task LoadArchivedCountAsync()
    {
        try
        {
            _loadingArchivedCount = true;
            var items = await FoodService.GetAllFoodsAsync(includeArchived: true);
            _archivedCount = items.Count(f => f.IsArchived);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load archived count: {ex.Message}");
        }
        finally
        {
            _loadingArchivedCount = false;
        }
    }

    private string GetThemeDisplayName(string themeName)
    {
        return themeName switch
        {
            "System" => "System Default",
            "Light" => "Light (Amber)",
            "Dark" => "Dark (Rustic)",
            "Black" => "Midnight Black",
            "Material" => "Material Red",
            "Forest" => "Night Forest",
            "Cafe" => "Dark Café",
            "Walnut" => "Dark Walnut",
            "Clay" => "Dark Clay",
            "Moss" => "Dark Moss",
            "Ink" => "Dark Ink",
            _ => themeName
        };
    }

    private void NavigateToArchived()
    {
        Navigation.NavigateTo("archived");
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("login");
    }
}
