@page "/"
@using Microsoft.AspNetCore.Authorization
@using StorhaugenWebsite.Components
@using StorhaugenWebsite.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation
@attribute [Authorize]

<div class="home-container">
    <div class="welcome-header mb-6">
        <MudText Typo="Typo.h5" Style="font-family: 'Fraunces', serif; font-weight: 600;">
            Hei, @(AuthService.CurrentUserName ?? "Kokk")! 👋
        </MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">
            Klar for dagens middag?
        </MudText>
    </div>

    @* --- QUICK ACTIONS CARD --- *@
    <MudPaper Class="pa-4 mb-6 quick-action-card" Elevation="0">
        <div class="d-flex justify-space-between align-center">
            <div>
                <MudText Typo="Typo.h6" Style="font-weight: 600;">Hva spiste dere?</MudText>
                <MudText Typo="Typo.caption" Color="Color.Secondary">Logg dagens middag raskt</MudText>
            </div>
            <MudFab Color="Color.Primary"
                    StartIcon="@Icons.Material.Rounded.Add"
                    Size="Size.Medium"
                    OnClick="@(() => Navigation.NavigateTo("add"))"
                    Elevation="0" />
        </div>
    </MudPaper>

    @* --- ACTIVITY FEED --- *@
    <div class="feed-section">
        <div class="d-flex align-center gap-2 mb-3">
            <MudIcon Icon="@Icons.Material.Rounded.History" Color="Color.Secondary" Size="Size.Small" />
            <MudText Typo="Typo.subtitle2" Color="Color.Secondary" Style="text-transform: uppercase; letter-spacing: 1px;">
                Siste Nytt
            </MudText>
        </div>

        @* Reusing your existing component *@
        <ActivityFeed PageSize="10" />
    </div>
</div>

<style>
    .quick-action-card {
        background: linear-gradient(135deg, var(--mud-palette-surface) 0%, rgba(var(--mud-palette-primary-rgb), 0.05) 100%);
        border: 1px solid var(--mud-palette-divider);
        border-radius: 16px;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Simple auth check to ensure state is ready
        if (!AuthService.IsAuthenticated) return;
    }
}